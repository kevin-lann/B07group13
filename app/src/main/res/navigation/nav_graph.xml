<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.studentapp.Login.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/login_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SignupFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_studentDashboard"
            app:destination="@id/studentDashboardFragment" />
        <action
            android:id="@+id/action_LoginFragment_to_admin_dashboard"
            app:destination="@id/admin_dashboard_fragment" />
    </fragment>
    <fragment
        android:id="@+id/SignupFragment"
        android:name="com.example.studentapp.Signup.SignupFragment"
        android:label="@string/signup_fragment_label"
        tools:layout="@layout/signup_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.studentapp.ThirdFragment"
        android:label="Third Fragment"
        tools:layout = "@layout/fragment_third">

        <action
            android:id="@+id/action_ThirdFragment_to_FirstFragment"
            app:destination="@id/LoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/studentDashboardFragment"
        android:name = "com.example.studentapp.StudentDashboard.StudentDashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/student_dashboard_fragment">
        <action
            android:id="@+id/action_studentDashboardFragment_to_Events"
            app:destination="@id/eventsFragment" />
        <action
            android:id="@+id/action_studentDashboardFragment_to_SubmitComplaint"
            app:destination="@id/submitComplaintFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventsFragment"
        android:name="com.example.studentapp.Events.EventsFragment"
        android:label="All Events"
        tools:layout="@layout/events_fragment">

    </fragment>

    <fragment
        android:id="@+id/submitComplaintFragment"
        android:name="com.example.studentapp.Complaints.ComplaintsFragment"
        android:label="All Events"
        tools:layout="@layout/events_fragment">
        <action
            android:id="@+id/action_SubmitComplaint_to_studentDashboardFragment"
            app:destination="@id/studentDashboardFragment" />

    </fragment>
    <fragment
        android:id="@+id/admin_dashboard_fragment"
        android:name="com.example.studentapp.StudentDashboard.admin_dashboard_fragment"
        android:label="fragment_admin_dashboard_fragment"
        tools:layout="@layout/admin_dashboard_fragment" >
        <action
            android:id="@+id/action_admin_dashboard_fragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>

</navigation>