<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.studentapp.Login.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/login_fragment">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SignupFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_ComplaintsFragment"
            app:destination="@id/ComplaintsFragment" />
    </fragment>
    <fragment
        android:id="@+id/SignupFragment"
        android:name="com.example.studentapp.Signup.SignupFragment"
        android:label="@string/signup_fragment_label"
        tools:layout="@layout/signup_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_ThirdFragment"
            app:destination="@id/ThirdFragment" />
    </fragment>

    <fragment
        android:id="@+id/ThirdFragment"
        android:name="com.example.studentapp.ThirdFragment"
        android:label="Third Fragment"
        tools:layout = "@layout/fragment_third">

        <action
            android:id="@+id/action_ThirdFragment_to_FirstFragment"
            app:destination="@id/LoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/ComplaintsFragment"
        android:name="com.example.studentapp.Complaints.ComplaintsFragment"
        android:label="Complaints Fragment"
        tools:layout="@layout/complaints_fragment">
        <!-- Define actions if needed -->
    </fragment>


</navigation>